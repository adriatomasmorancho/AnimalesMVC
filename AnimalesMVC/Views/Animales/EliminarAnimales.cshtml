@model AnimalesMVC.Models.Animal

@{
    ViewBag.Title = "EliminarAnimales";
}

<h2>EliminarAnimales</h2>

@using (Html.BeginForm("EliminarAnimales", "Animales", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div>
        @Html.LabelFor(m => m.NombreAnimal)
        @Html.TextBoxFor(m => m.NombreAnimal, new { type = "text", required = "required" })
        @Html.ValidationMessageFor(m => m.NombreAnimal)
    </div>

    <div>
        <button type="submit">Eliminar Animal</button>
    </div>

    if (ViewBag.Error != null)
    {
        <p style="color:red;">@ViewBag.Error</p>
    }
}


